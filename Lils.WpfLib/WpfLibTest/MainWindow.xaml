<Window x:Class="WpfLibTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:local="clr-namespace:WpfLibTest"
        xmlns:converters="clr-namespace:Lils.WpfLib.Converters;assembly=Lils.WpfLib"
        xmlns:samples="clr-namespace:WpfLibTest.Samples"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid Margin="10,0">
        <TabControl>
            <TabItem Header="Converters">
                <samples:ConverterSampleView/>
            </TabItem>
            <TabItem Header="Sliders">
                <samples:SliderSampleView/>
            </TabItem>
            <TabItem Header="Buttons" IsSelected="True">
                <samples:ButtonSampleView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
